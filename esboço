void setup() {
  serialBegin(9600);
  pinMode(led1,OUTPUT);
  pinMode(led2,OUTPUT);
  pinMode(led3,OUTPUT);
  pinMode(led4,OUTPUT);
  serialprint("Bem-vindo(a)!")


  

}

void loop() {
 // SerialprintNO DISPLAY(random arr)
